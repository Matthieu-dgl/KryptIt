<Window x:Class="KryptIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:KryptIt.ViewModels"
        Title="QuickPass"
        Width="1000" Height="600"
        Background="#F7F7F7"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Ressources Design Sidebar et Header -->
        <Style x:Key="SidebarItemTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10,5,0,5"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Styles pour les contrôles modernes (empruntés du 2e code) -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12 6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="ModernListView" TargetType="ListView">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>
        <Style x:Key="SearchTextBox" TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>

    <!-- Affectation du ViewModel pour les bindings -->
    <Window.DataContext>
        <vm:PasswordViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="White" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Lock"
                                   Width="24"
                                   Height="24"
                                   Foreground="Black"
                                   Margin="0,0,5,0"/>
                    <TextBlock Text="QuickPass" Style="{StaticResource HeaderTextStyle}" />
                </StackPanel>
                <StackPanel Grid.Column="1" />
                <materialDesign:PackIcon Kind="Account"
                                 Width="24"
                                 Height="24"
                                 Foreground="Black"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Center"
                                 Grid.Column="2"/>
            </Grid>
        </Border>

        <!-- CONTENU PRINCIPAL -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0"
              Background="White"
              BorderBrush="#E0E0E0"
              BorderThickness="0,1,1,0">
                <StackPanel>
                    <TextBlock Text="Settings"
                     Margin="10,15,0,5"
                     FontWeight="Bold"
                     FontSize="14"
                     Foreground="Black"/>
                    <StackPanel Margin="10,0,0,0">
                        <TextBlock Text="General" Style="{StaticResource SidebarItemTextStyle}"/>
                        <TextBlock Text="Security" Style="{StaticResource SidebarItemTextStyle}"/>
                    </StackPanel>
                    <TextBlock Text="Folders"
                     Margin="10,15,0,5"
                     FontWeight="Bold"
                     FontSize="14"
                     Foreground="Black"/>
                    <StackPanel Margin="10,0,0,0">
                        <TextBlock Text="Work" Style="{StaticResource SidebarItemTextStyle}"/>
                        <TextBlock Text="Personal" Style="{StaticResource SidebarItemTextStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- MAIN CONTENT -->
            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Section Ajout -->
                    <RowDefinition Height="Auto"/>
                    <!-- Section Recherche -->
                    <RowDefinition Height="*"/>
                    <!-- Liste des mots de passe -->
                </Grid.RowDefinitions>

                <!-- Section Ajout -->
                <Border Grid.Row="0" 
                Background="White"
                CornerRadius="5"
                Padding="15"
                Margin="0 0 0 15"
                BorderThickness="1"
                BorderBrush="#E0E0E0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Nom du compte -->
                        <StackPanel Grid.Column="0" Margin="0 0 15 0">
                            <TextBlock Text="Nom du compte" Foreground="#607D8B" FontSize="12"/>
                            <TextBox Style="{StaticResource ModernTextBox}" 
                       Text="{Binding NewAccount}" 
                       Margin="0 5 0 0"/>
                        </StackPanel>

                        <!-- Mot de passe -->
                        <StackPanel Grid.Column="1" Margin="0 0 15 0">
                            <TextBlock Text="Mot de passe" Foreground="#607D8B" FontSize="12"/>
                            <TextBox Style="{StaticResource ModernTextBox}" 
                       Text="{Binding NewPassword}" 
                       Margin="0 5 0 0"/>
                        </StackPanel>

                        <!-- URL -->
                        <StackPanel Grid.Column="2" Margin="0 0 15 0">
                            <TextBlock Text="URL du site" Foreground="#607D8B" FontSize="12"/>
                            <TextBox Style="{StaticResource ModernTextBox}" 
                       Text="{Binding NewURL}" 
                       Margin="0 5 0 0"/>
                        </StackPanel>

                        <!-- Bouton Ajouter -->
                        <Button Grid.Column="3" 
                    Content="Ajouter"
                    Command="{Binding AddPasswordCommand}"
                    Style="{StaticResource PrimaryButton}"
                    VerticalAlignment="Bottom"/>
                    </Grid>
                </Border>

                <!-- Section Recherche -->
                <Border Grid.Row="1" 
                Background="White"
                CornerRadius="5"
                Padding="10"
                Margin="0 0 0 15"
                BorderThickness="1"
                BorderBrush="#E0E0E0">
                    <TextBox Style="{StaticResource SearchTextBox}" 
                   Text="{Binding SearchText}"
                   FontSize="14"/>
                </Border>

                <!-- Liste des mots de passe -->
                <Border Grid.Row="2" 
                Background="White"
                CornerRadius="5"
                BorderThickness="1"
                BorderBrush="#E0E0E0">
                    <ListView ItemsSource="{Binding FilteredPasswords}"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    Style="{StaticResource ModernListView}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="URL" Width="180">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="URL" FontWeight="SemiBold" Foreground="#455A64"/>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.DisplayMemberBinding>
                                        <Binding Path="SiteName"/>
                                    </GridViewColumn.DisplayMemberBinding>
                                </GridViewColumn>

                                <GridViewColumn Header="Compte" Width="150">
                                    <GridViewColumn.DisplayMemberBinding>
                                        <Binding Path="Login"/>
                                    </GridViewColumn.DisplayMemberBinding>
                                </GridViewColumn>

                                <GridViewColumn Header="Mot de passe" Width="220">
                                    <GridViewColumn.DisplayMemberBinding>
                                        <Binding Path="EncryptedPassword"/>
                                    </GridViewColumn.DisplayMemberBinding>
                                </GridViewColumn>

                                <GridViewColumn Header="Date" Width="140">
                                    <GridViewColumn.DisplayMemberBinding>
                                        <Binding Path="CreatedAt"/>
                                    </GridViewColumn.DisplayMemberBinding>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
