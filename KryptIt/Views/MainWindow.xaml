<Window x:Class="KryptIt.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:KryptIt.ViewModels"
        Title="KryptIt"
        Width="1000" Height="600"
        Background="#F7F7F7"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Ressources Design Sidebar et Header -->
        <Style x:Key="SidebarItemTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10,5,0,5"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Styles pour les contrôles modernes (empruntés du 2e code) -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12 6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="ModernListView" TargetType="ListView">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>
        <Style x:Key="SearchTextBox" TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <!-- Contenu de la zone de texte -->
                            <ScrollViewer x:Name="PART_ContentHost"/>
                            <!-- Watermark affiché lorsque le TextBox est vide -->
                            <TextBlock Text="Search"
                                       Foreground="Gray"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Affectation du ViewModel pour les bindings -->
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="White" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Lock"
                                             Width="24"
                                             Height="24"
                                             Foreground="Black"
                                             Margin="0,0,5,0"/>
                    <TextBlock Text="KryptIt" Style="{StaticResource HeaderTextStyle}" />
                </StackPanel>
                <StackPanel Grid.Column="1" />
                <materialDesign:PackIcon Kind="Account"
                                         Width="24"
                                         Height="24"
                                         Foreground="Black"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         Grid.Column="2"/>
                <!-- Bouton pour ouvrir la pop-up -->
                <Button Grid.Column="3" 
                        Content="Ajouter" 
                        Command="{Binding OpenPopupCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- CONTENU PRINCIPAL -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,1,1,0">
                <StackPanel>
                    <TextBlock Text="Settings"
                               Margin="10,15,0,5"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="Black"/>
                    <StackPanel Margin="10,0,0,0">
                        <TextBlock Text="General" Style="{StaticResource SidebarItemTextStyle}"/>
                        <TextBlock Text="Security" Style="{StaticResource SidebarItemTextStyle}"/>
                    </StackPanel>
                    <TextBlock Text="Folders"
                               Margin="10,15,0,5"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="Black"/>
                    <StackPanel Margin="10,0,0,0">
                        <TextBlock Text="Work" Style="{StaticResource SidebarItemTextStyle}"/>
                        <TextBlock Text="Personal" Style="{StaticResource SidebarItemTextStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- MAIN CONTENT (Recherche et liste des mots de passe) -->
            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <!-- Section Recherche -->
                    <RowDefinition Height="Auto"/>
                    <!-- Liste des mots de passe -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Section Recherche -->
                <Border Grid.Row="0" 
                        Background="White"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0 0 0 15"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <TextBox Style="{StaticResource SearchTextBox}" 
                   Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                   FontSize="14"/>
                </Border>

                <!-- Liste des mots de passe -->
                <Border Grid.Row="1" 
                        Background="White"
                        CornerRadius="5"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <ListView ItemsSource="{Binding FilteredPasswords}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              Style="{StaticResource ModernListView}"
                              SelectedItem="{Binding SelectedPassword}">
                        <ListView.Resources>
                            <ContextMenu x:Key="ItemContextMenu">
                                <MenuItem Header="Open in new Tab" Command="{Binding DataContext.OpenInNewTabCommand, RelativeSource={RelativeSource AncestorType=ListView}}" />
                                <Separator/>
                                <MenuItem Header="Copy Username" Command="{Binding DataContext.CopyUsernameCommand, RelativeSource={RelativeSource AncestorType=ListView}}" />
                                <MenuItem Header="Copy Password" Command="{Binding DataContext.CopyPasswordCommand, RelativeSource={RelativeSource AncestorType=ListView}}" />
                                <MenuItem Header="Copy Website" Command="{Binding DataContext.CopyWebsiteCommand, RelativeSource={RelativeSource AncestorType=ListView}}" />
                                <Separator/>
                                <MenuItem Header="Delete" Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ListView}}" />
                            </ContextMenu>
                            <ContextMenu x:Key="EmptyAreaContextMenu">
                                <MenuItem Header="Add an entry" Command="{Binding AddPasswordCommand}" />
                            </ContextMenu>
                        </ListView.Resources>
                        <ListView.ContextMenu>
                            <StaticResource ResourceKey="EmptyAreaContextMenu"/>
                        </ListView.ContextMenu>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="URL" Width="180">
                                    <GridViewColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="URL" FontWeight="SemiBold" Foreground="#455A64"/>
                                        </DataTemplate>
                                    </GridViewColumn.HeaderTemplate>
                                    <GridViewColumn.DisplayMemberBinding>
                                        <Binding Path="SiteName"/>
                                    </GridViewColumn.DisplayMemberBinding>
                                </GridViewColumn>

                                <GridViewColumn Header="Compte" Width="150">
                                    <GridViewColumn.DisplayMemberBinding>
                                        <Binding Path="Login"/>
                                    </GridViewColumn.DisplayMemberBinding>
                                </GridViewColumn>

                                <GridViewColumn Header="Mot de passe" Width="220">
                                    <GridViewColumn.DisplayMemberBinding>
                                        <Binding Path="EncryptedPassword"/>
                                    </GridViewColumn.DisplayMemberBinding>
                                </GridViewColumn>

                                <GridViewColumn Header="Date" Width="140">
                                    <GridViewColumn.DisplayMemberBinding>
                                        <Binding Path="CreatedAt"/>
                                    </GridViewColumn.DisplayMemberBinding>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>
            </Grid>
        </Grid>

        <!-- POP-UP pour ajouter un compte (balise Popup) -->
        <Popup IsOpen="{Binding IsPopupOpen}" 
               Placement="Center" 
               AllowsTransparency="True"
               PopupAnimation="Fade"
               StaysOpen="False">
            <Border Background="White" 
                    CornerRadius="5" 
                    Padding="20" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Ajouter un nouveau compte" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10" 
                               Foreground="Black"/>
                    <!-- Nom du compte -->
                    <TextBlock Text="Nom du compte" Foreground="#607D8B" FontSize="12"/>
                    <TextBox Style="{StaticResource ModernTextBox}" 
                             Text="{Binding NewAccount}" 
                             Margin="0,5,0,10"/>
                    <!-- Mot de passe -->
                    <TextBlock Text="Mot de passe" Foreground="#607D8B" FontSize="12"/>
                    <TextBox Style="{StaticResource ModernTextBox}" 
                             Text="{Binding NewPassword}" 
                             Margin="0,5,0,10"/>
                    <!-- URL -->
                    <TextBlock Text="URL du site" Foreground="#607D8B" FontSize="12"/>
                    <TextBox Style="{StaticResource ModernTextBox}" 
                             Text="{Binding NewURL}" 
                             Margin="0,5,0,10"/>
                    <!-- Boutons de validation -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Annuler" 
                                Command="{Binding ClosePopupCommand}" 
                                Style="{StaticResource PrimaryButton}" 
                                Background="Gray"
                                Margin="0,0,10,0"/>
                        <Button Content="Ajouter" 
                                Command="{Binding AddPasswordCommand}" 
                                Style="{StaticResource PrimaryButton}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

    </Grid>
</Window>
