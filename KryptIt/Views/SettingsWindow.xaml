<UserControl x:Class="KryptIt.Views.SettingsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:KryptIt.ViewModels"
             Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Side Navigation -->
        <Border Grid.Column="0" Background="#F5F5F5">
            <StackPanel Margin="20">
                <TextBlock Text="KryptIt" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Margin="0,0,0,30"/>

                <StackPanel>
                    <Button Content="Profile Settings" 
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Margin="0,0,0,10"
                            HorizontalContentAlignment="Left"/>
                    <Button Content="Logout" 
                            Command="{Binding LogoutCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            HorizontalContentAlignment="Left"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Settings Area -->
        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Settings" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1">
                <!-- App Preferences -->
                <TextBlock Text="App Preferences" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>

                <StackPanel Margin="0,0,0,20">
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Enable Notifications" 
                                   VerticalAlignment="Center"/>
                        <ToggleButton Grid.Column="1" 
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"/>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Dark Theme" 
                                   VerticalAlignment="Center"/>
                        <ToggleButton Grid.Column="1" 
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"/>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Privacy Mode" 
                                   VerticalAlignment="Center"/>
                        <ToggleButton Grid.Column="1" 
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"/>
                    </Grid>
                </StackPanel>

                <!-- Manage Folders -->
                <TextBlock Text="Manage Folders" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>

                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Work" VerticalAlignment="Center"/>
                        <Button Grid.Column="1" 
                                Content="Rename" 
                                Style="{StaticResource MaterialDesignFlatButton}"/>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Personal" VerticalAlignment="Center"/>
                        <Button Grid.Column="1" 
                                Content="Rename" 
                                Style="{StaticResource MaterialDesignFlatButton}"/>
                    </Grid>

                    <Button Content="Add New Folder" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,10,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0">
                <Button Content="Cancel" 
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Margin="0,0,10,0"
                        Command="{Binding CloseSettingsCommand}"/>
                <Button Content="Save Changes" 
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>