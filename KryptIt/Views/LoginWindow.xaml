<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="KryptIt.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:KryptIt.ViewModels"
        xmlns:helpers="clr-namespace:KryptIt.Helpers"
        Title="KryptIt - Login" Height="350" Width="300" Background="#F7F7F7"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
            <!-- Logo et titre -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <materialDesign:PackIcon Kind="Lock" Height="24" Width="24" Foreground="Black"/>
                <TextBlock Text="KryptIt" FontWeight="Bold" FontSize="16" Margin="5,0,0,0"/>
            </StackPanel>

            <!-- Message de connexion -->
            <TextBlock Text="Login to your account" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- Champ Username -->
            <TextBlock Text="Username" FontSize="12" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Height="25"/>

            <!-- Champ Password -->
            <TextBlock Text="Password" FontSize="12" Margin="0,0,0,5"/>
            <PasswordBox Height="25" 
                         helpers:PasswordBoxHelper.BindPassword="True" 
                         helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Bouton Login -->
            <Button Content="Login" Command="{Binding LoginCommand}" Background="Black" Foreground="White" Height="35" Margin="0,10,0,10"/>

            <!-- Lien d'inscription -->
            <TextBlock Text="Register for a new account" FontSize="12" HorizontalAlignment="Center" Foreground="Gray" Cursor="Hand">
                <TextBlock.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding OpenRegisterCommand}" />
                </TextBlock.InputBindings>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
